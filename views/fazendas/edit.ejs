<% include ../header %>
	
	<div class="row marketing">
		<h3><%- title %></h3>
		<div class="col-lg-12">
			<form action="/fazenda/<%-fazenda._id%>" method="post">
				<input type="hidden" name="_method" value="PUT">
			

				<div class="control-group">
					<label for="fazenda[name]">Nome</label>
					<input type="Text" value="<%-fazenda.name%>" class="form-control" name="fazenda[name]" id="name" placeholder="Nome" required >
				    <label for="fazenda[email]">email</label>
					<input type="Text" value="<%-fazenda.email%>" class="form-control" name="fazenda[email]" id="email" placeholder="Email" required >
				</div>
				<br>
				<button class="btn btn-lg btn-primary" type="submit">Salvar</button>
			</form>
		</div>
	</div>
<% include ../footer %>