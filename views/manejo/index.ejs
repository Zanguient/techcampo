<% include ../header %>
	<% include ../helpers/search_form %>
	<% if (messages.success) { %>
		<div class="alert alert-success">
			<span><%- messages.success %></span>
		</div>
	<% } %>
	<% if (messages.error) { %>
		<div class="alert alert-danger">
			<span><%- messages.error %></span>
		</div>
	<% } %>

	<div class="jumbotron">
		<h1>Tech Campo</h1>
		<p class="lead">Sistema de coleta dos dados dos Bovinos, foi desenvolvido usando Node.JS, MongoDB, EJS, Twtitter Bootstrap.</p>
		<p><a class="btn btn-lg btn-success" href="/manejar" role="button">Iniciar Manejo</a></p>
	</div>
    <% if (sess.logged_in){ %>
	<div class="row marketing">
       
        <div class="col-lg-12">
	        <% if (manejos.length) {%>
	        	<% manejos.forEach(function(manejo, index) { %>
	        		<article>
						<h4><a href="/manejo/<%-manejo._id%>"><%- manejo.title %></a></h4>
						<p><%- manejo.body %></p><br>
						<div class="row">
							<div class="col-lg-12">
								<p>
									<strong>Data: </strong><%=: manejo.createdAt | formatDate %> |
									<strong><%- manejo.comments.length %> Coment√°rios</strong> |
									<% if (manejo.tags){ %>
										<strong>Tags:</strong>
										<% manejo.tags.split(',').forEach(function(tag) { %>
											<a href="/tags/<%-tag%>"><span class="label label-info"><%- tag %></span></a>
										<% }) %>
									<% } %>
								</p>
							</div>
						</div>
					</article>
					<div class="row">
						<hr />
					</div>
				<% }) %>
			<% }else{ %>
				<h2>Nenhum manejo encontrado</h2>
			<% } %>
        </div>
      </div>
<% } %>
<% include ../footer %>




